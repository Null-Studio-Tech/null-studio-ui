---
import Layout from '../../layouts/Layout.astro';
import ReactContainer from '../../components/container/glassmorphism-container/react/Container.tsx';
import VueContainer from '../../components/container/glassmorphism-container/vue/Container.vue';
---

<Layout>
  <main class="mx-auto max-w-3xl space-y-8 p-6">
    <header>
      <h1 class="text-2xl font-bold">Container 演示</h1>
      <p class="text-sm text-gray-600">玻璃拟态容器，React 与 Vue 实现。</p>
    </header>

    <section class="space-y-4">
      <h2 class="text-lg font-semibold">React</h2>
      <ReactContainer client:load>
        <h3 class="text-base font-semibold">Hello from React</h3>
        <p class="text-sm text-gray-700">Creative glassmorphism container with blur.</p>
      </ReactContainer>
    </section>

    <section class="space-y-4">
      <h2 class="text-lg font-semibold">Vue</h2>
      <VueContainer client:load>
        <h3 class="text-base font-semibold">Hello from Vue</h3>
        <p class="text-sm text-gray-700">Creative glassmorphism container with blur.</p>
      </VueContainer>
    </section>
  </main>
</Layout>
