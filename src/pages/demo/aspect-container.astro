---
import Layout from "@/layouts/Layout.astro";
import AspectContainerAstro from "@/components/container/aspect-container/AspectContainer.astro";
import AspectContainerVue from "@/components/container/aspect-container/AspectContainer.vue";
import AspectContainerReact from "@/components/container/aspect-container/AspectContainer.tsx";
---

<Layout title="Aspect Container Demo">
  <main>
    <h1>固定宽高比容器演示</h1>

    <section>
      <h2>16:9 宽高比容器(Astro)</h2>
      <div class="demo-wrapper resize overflow-hidden">
        <AspectContainerAstro aspectRatio="16:9">
          <div class="demo-content">
            <p>16:9 比例内容</p>
            <p>容器会根据父元素尺寸自动调整</p>
          </div>
        </AspectContainerAstro>
      </div>
    </section>

    <section>
      <h2>16:9 宽高比容器(Vue)</h2>
      <div class="demo-wrapper resize overflow-hidden">
        <AspectContainerVue aspectRatio="16:9" client:only="vue">
          <div class="demo-content">
            <p>16:9 比例内容</p>
            <p>容器会根据父元素尺寸自动调整</p>
          </div>
        </AspectContainerVue>
      </div>
    </section>

    <section>
      <h2>16:9 宽高比容器(React)</h2>
      <div class="demo-wrapper resize overflow-hidden">
        <AspectContainerReact aspectRatio="16:9" client:only="react">
          <div class="demo-content">
            <p>16:9 比例内容</p>
            <p>容器会根据父元素尺寸自动调整</p>
          </div>
        </AspectContainerReact>
      </div>
    </section>

    <section>
      <h2>4:3 宽高比容器</h2>
      <div class="demo-wrapper resize overflow-hidden">
        <AspectContainerAstro aspectRatio="4:3">
          <div class="demo-content">
            <p>4:3 比例内容</p>
            <p>无论父容器如何变化，始终保持比例</p>
          </div>
        </AspectContainerAstro>
      </div>
    </section>

    <section>
      <h2>1:1 正方形容器</h2>
      <div class="demo-wrapper resize overflow-hidden">
        <AspectContainerAstro aspectRatio="1:1">
          <div class="demo-content">
            <p>1:1 比例内容</p>
            <p>正方形容器</p>
          </div>
        </AspectContainerAstro>
      </div>
    </section>

    <section>
      <h2>21:9 超宽容器</h2>
      <div class="demo-wrapper tall resize overflow-hidden">
        <AspectContainerAstro aspectRatio="21:9">
          <div class="demo-content">
            <p>21:9 比例内容</p>
            <p>超宽屏比例</p>
          </div>
        </AspectContainerAstro>
      </div>
    </section>

    <section>
      <h2>9:16 竖屏容器</h2>
      <div class="demo-wrapper wide resize overflow-hidden">
        <AspectContainerAstro aspectRatio="9:16">
          <div class="demo-content">
            <p>9:16 比例内容</p>
            <p>竖屏比例，适合移动端</p>
          </div>
        </AspectContainerAstro>
      </div>
    </section>
  </main>

  <AspectContainerAstro />
</Layout>

<style>
  main {
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: #333;
  }

  section {
    margin-bottom: 3rem;
  }

  h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #555;
  }

  .demo-wrapper {
    width: 600px;
    height: 400px;
    border: 2px solid #ddd;
    background: #000;
    padding: 1rem;
  }

  .demo-wrapper.tall {
    height: 600px;
  }

  .demo-wrapper.wide {
    width: 800px;
  }

  .demo-wrapper.resizable {
    resize: both;
    overflow: auto;
    min-width: 200px;
    min-height: 150px;
  }

  .demo-content {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .demo-content p {
    margin: 0.5rem 0;
    font-size: 1.2rem;
    text-align: center;
  }

  @media (max-width: 768px) {
    .demo-wrapper,
    .demo-wrapper.tall,
    .demo-wrapper.wide {
      width: 100%;
      height: 300px;
    }
  }
</style>
